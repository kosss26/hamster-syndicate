APP_ENV=development
APP_DEBUG=true
APP_URL=https://example.com
LOG_CHANNEL=stack

TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_SECRET=replace_with_secret

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=quiz_bot
DB_USERNAME=root
DB_PASSWORD=secret

CACHE_DRIVER=filesystem
REDIS_URL=redis://127.0.0.1:6379
REDIS_NAMESPACE=quiz_bot
QUEUE_CONNECTION=sync

# Список Telegram ID администраторов (через запятую)
# Чтобы узнать свой Telegram ID, напишите боту @userinfobot
ADMIN_TELEGRAM_IDS=

# URL Mini App (для WebApp кнопки)
# После развёртывания Mini App укажите его URL здесь
WEBAPP_URL=

# WebSocket (синхронные дуэли)
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8090
WEBSOCKET_SYNC_INTERVAL=1
WEBSOCKET_EVENT_POLL_INTERVAL=0.2
WEBSOCKET_FORCED_MIN_INTERVAL_MS=120
WEBSOCKET_URL=ws://localhost:8090
WEBSOCKET_TICKET_SECRET=replace_with_strong_secret
WEBSOCKET_CLIENT_TIMEOUT_SECONDS=70
WEBSOCKET_MAX_MESSAGE_BYTES=2048
WEBSOCKET_EVENTS_PATH=/var/www/quiz-bot/bot/storage/runtime/duel_events
WEBSOCKET_EVENTS_TTL_SECONDS=120
WEBSOCKET_STATS_INTERVAL_SECONDS=30

DEV_AUTH_ENABLED=false
DEV_AUTH_USER_ID=

# Security hardening
INIT_DATA_TTL_SECONDS=300
WEBSOCKET_TICKET_TTL_SECONDS=300
